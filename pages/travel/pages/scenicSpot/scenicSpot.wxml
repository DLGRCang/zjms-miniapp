<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content">知名景点</view>
</cu-custom>
<image src="{{imgUrl}}/image/zhimingjingdian.png" mode='widthFix' style="height：375px;width:100%;"></image>
<view class="margin-lr-lg">
  <dot-title title="景区风采" color="red" isMore="true"></dot-title>
  <scroll-view scroll-x scroll-with-animation style="width: 100%; white-space: nowrap;">
    <view class="info" wx:for="{{6}}" wx:key="item">
      <image src="{{imgUrl}}/image/zhimingjingdian.png"></image>
      <view class="margin-top-xs padding-left-sm">知名景点名称</view>
      <view class="margin-top-xs padding-left-sm">
        <text class="text-sm text-grey">服务星级：</text>
        <text class="cuIcon-favorfill lg text-yellow" wx:for="{{4}}" wx:key="item"></text>
      </view>
    </view>
  </scroll-view>
  <dot-title title="景区直播" color="red" isMore="true"></dot-title>
  <scroll-view scroll-x scroll-with-animation style="width: 100%; white-space: nowrap;">
    <view class="info" wx:for="{{6}}" wx:key="item">
      <view style="position: relative;">
        <image src="{{imgUrl}}/image/zhimingjingdian.png"></image>
        <view class="logo text-white text-xs">直播中</view>
      </view>
      <view class="margin-top-xs padding-left-sm">知名景点名称</view>
    </view>
  </scroll-view>
  <dot-title title="游客动态" color="red" isMore="true"></dot-title>
	<view class="flex" wx:for="{{4}}">
		<image mode="aspectFit" src="{{imgUrl}}/image/touxiang.png" class="round margin-lr-sm" style="width: 80rpx;height: 80rpx;"></image>
		<view class="flex flex-direction">
			<text class="text-black text-df" style="margin-bottom: 4rpx;">张宏昌</text>
      <text class="text-gray text-sm margin-bottom-xs">2019-02-03</text>
			<text class="text-black text-df margin-bottom-xl">已发放</text>
    </view>
    <view style="margin-left:280rpx;">
      <text class="cuIcon-favorfill lg text-yellow" wx:for="{{5}}" wx:key="item"></text>
    </view>
	</view>


</view>