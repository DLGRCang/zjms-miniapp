/* pages/travel/pages/scenicSpot/scenicSpot.wxss */
.bgColor {
  background-color: #2162B5;
  color: #ffffff;
}

.red {
  color: #2162B5;
}

.tit {
  margin-bottom: -20rpx;
}

.info {
  width: 278rpx;
  height: 192rpx;
  display: inline-block;
  margin-right: 20rpx;
  border: 1rpx solid #F5F5F5;
  border-radius: 8rpx;
  padding-bottom: 25rpx;
  box-shadow: 0 0 1px #F5F5F5;
}

.info image {
  width: 278rpx;
  height: 192rpx;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}

.logo {
  width: 80rpx;
  height: 32rpx;
  padding-left: 12rpx;
  background-color: rgba(68, 65, 65, 0.377);
  border-radius: 16rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.textInfo {
  display: inline-block;
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}