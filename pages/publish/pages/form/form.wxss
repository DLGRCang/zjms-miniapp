}
.cu-form-group{
  border-bottom: 1rpx solid #eee;
}
.cu-form-group .tit {
  border: none;
}
.select{
  display: flex;
  background-color: var(--white);
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  align-items: center;
  text-align: justify;
  padding: 1rpx 30rpx;
  min-height: 100rpx;
}
.select-nei{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;

}
.select-option{
  width: 100%;
  height: auto;
  display: flex;
  border: 1rpx solid #eee;
}