<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content" class="text-white text-xl text-black text-bold">美发洗浴</view>
</cu-custom>
<image mode="widthFix" src="{{imgUrl}}/image/meifaxiyu.png" style="width:100%;height:396rpx;"></image>
<tab bindmyevent="selectTab" tvColor="color" tabName="{{tabName}}"></tab>
<view class="margin-lr-lg padding-tb-lg">
  <view wx:if="{{tabId==0}}">
    <item-image-text wx:for="{{dataList}}" imgUrl="{{item.info_photos}}" itemTitle="{{item.info_content}}"
      itemInfo="{{item.info_summary}}" isImg="true" isTab="true" itemTabs="{{item.infotypePname}}" isLine="true">
    </item-image-text>
  </view>
  <view wx:if="{{tabId==1}}">
    <item-image-text wx:for="{{dataList}}" imgUrl="{{item.info_photos}}" itemTitle="{{item.info_content}}"
      itemInfo="{{item.info_summary}}" isImg="true" isTab="true" itemTabs="{{item.infotypePname}}" isLine="true">
    </item-image-text>
  </view>
</view>