<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content" class="text-white text-xl text-black text-bold">物业</view>
</cu-custom>
<image mode="widthFix" src="{{imgUrl}}/image/wuye.png" style="width:100%;height:396rpx;"></image>
<button class="button">问题上报</button>
<view class="margin-lr-lg padding-tb-lg">
  <dot-title title="小区通知" color="color" isMore="true" sign="{{infotypeid}}"></dot-title>
  <view class="cont">
    <view class="margin-bottom-lg" wx:for="{{dataList}}" wx:key="item">
      <view>{{item.info_content}}</view>
      <view class="margin-top-xs text-grey text-sm">{{item.publishdate}}</view>
      <view class="line"></view>
    </view>
    <!-- <view class="flex justify-center text-grey margin-bottom-xs">查看更多</view> -->
  </view>
  <dot-title title="上报历史" color="color" isMore="true" sign="{{infotypeid1}}"></dot-title>
  <view wx:for="{{dataList1}}" wx:key="item">
    <item-image-text imgUrl="{{item.info_photos}}" itemTitle="{{item.info_content}}" isImg="true" isDate="true" date="{{item.publishdate}}">
    </item-image-text>
  </view>
</view>