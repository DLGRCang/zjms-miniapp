<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content" class="text-white text-xl text-black text-bold">生鲜配送</view>
</cu-custom>
<image mode="widthFix" src="{{imgUrl}}/image/shengxian.png" style="width:100%;height:396rpx;"></image>
<view class="margin-lr-lg">
  <dot-title title="生鲜商家" color="color" isMore="true" sign="{{infotypeid1}}" type="3"></dot-title>
  <view class="cont">
    <item-image-text wx:for="{{dataList1}}" obj="{{item}}" imgUrl="{{item.info_photos}}" itemTitle="{{item.info_content}}"
      itemInfo="{{item.info_summary}}" isImg="true" isTab="true" itemTabs="{{item.infotypePname}}" isLine="true">
    </item-image-text>
  </view>
  <dot-title title="生鲜需求" color="color" isMore="true" sign="{{infotypeid}}" type="1"></dot-title>
  <view class="margin-bottom-lg cont" style="padding:20rpx;">
    <item-image-text wx:for="{{dataList}}" obj="{{item}}" isImg="{{falses}}" itemTitle="{{item.info_content}}"
      isDate="true" date="{{item.publishdate}}"></item-image-text>
    <button>发布需求</button>
  </view>
</view>