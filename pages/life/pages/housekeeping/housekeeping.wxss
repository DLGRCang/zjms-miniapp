/* pages/life/pages/housekeeping/housekeeping.wxss */
.header-bgcolor{
  background-color: #FFBE1A;
}
.cuIcon-back{
  color: #fff;
}
.banner{
  width: 100%;
  height: 320rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}

.wrapper{
  padding: 0 40rpx;
  background-color: #fff;
}
.wrapper .title{
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.wrapper .title .left{
  height: 50rpx;
  display: flex;
  align-items: center;
}
.wrapper .title .left .shuxian{
  width: 8rpx;
  height: 30rpx;
  background-color: #FFBE1A;
  border-radius: 4rpx;
  margin-right: 11rpx;
}
.wrapper .title .left .text{
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: 400;
  color: #000;
}
.wrapper .title .right{
  font-size: 26rpx;
  font-weight: 400;
  color: #9F9F9F;
  line-height: 40rpx;
}

.wrapper .content{
  padding: 30rpx;
  border-radius: 6rpx;
  border: 2rpx solid #F5F5F5;
}
.wrapper .content .block{
  width: 100%;
  height: 172rpx;
  border-bottom: 2rpx solid #F5F5F5;
  display: flex;
  margin-bottom: 38rpx;
}
.wrapper .content .block:last-child{
  border: none;
  height: 132rpx;
  margin: 0;
}
.wrapper .content .block .img{
  width: 132rpx;
  height: 132rpx;
  border-radius: 6rpx;
  background-color: #d8d8d8;
  margin-right: 30rpx;
  flex-shrink: 0;
}
.wrapper .content .block .img image{
  width: 100%;
  height: 100%;
}
.wrapper .content .block .text-wrap{
  max-width: 448rpx;
  height: 132rpx;
}
.wrapper .content .block .text-wrap .title{
  font-size: 28rpx;
  color: #000;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 10rpx;
}
.wrapper .content .block .text-wrap .subtitle{
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.wrapper .content .block .text-wrap .tips{
  width: 100%;
}
.wrapper .content .block .text-wrap .tips .tip-item{
  padding: 0 10rpx;
  height: 30rpx;
  border-radius: 4rpx;
  border: 2rpx solid #E1E1E1;
  text-align: center;
  line-height: 28rpx;
  font-size: 20rpx;
  color: #929292;
  margin-right: 10rpx;
}

.footer{
  height: 164rpx;
  position: relative;
  margin: auto 0;
  font-size: 24rpx;
  text-align: center;
  color: #BEBEBE;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ellipsis{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
