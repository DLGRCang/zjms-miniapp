        <item-image-text obj="{{item}}" itemTitle="{{item.info_content}}" isImg="{{false}}" isDate="true"
          date="{{item.publishdate}}"></item-image-text>
      </view>
      <button>发布信息</button>
    </view>
  </view>
</view>