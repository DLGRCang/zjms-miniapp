<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content" class="text-white text-xl text-black text-bold">顺风车</view>
</cu-custom>
<image mode="widthFix" src="{{imgUrl}}/image/shunfengche.png" style="width:100%;height:396rpx;"></image>
<tab bindmyevent="selectTab" tvColor="color" tabName="{{tabName}}"></tab>
<view class="margin-lr-lg">
  <view wx:if="{{tabId==0}}">
    <dot-title title="{{tabName[0]}}" color="color" isMore="true" sign="{{infotypeid}}" type="1"></dot-title>
    <view class="margin-bottom-lg cont">
      <view wx:for="{{dataList}}" wx:key="item">
        <item-image-text obj="{{item}}" itemTitle="{{item.info_content}}" isImg="{{false}}" isDate="true"
          date="{{item.publishdate}}"></item-image-text>

      </view>
      <button>发布信息</button>
    </view>
  </view>

  <view wx:if="{{tabId==1}}">
    <dot-title title="{{tabName[1]}}" color="color" isMore="true" sign="{{infotypeid}}" type="1"></dot-title>
