<!--pages/economic/pages/secondHand/secondHand.wxml-->
<cu-custom bgColor="bgColor" isBack="{{true}}">
	<view slot="content" class="text-white text-xl text-black text-bold">{{tit}}</view>
</cu-custom>

<wxs module="function">
	module.exports = {
		split: function (value) {
			return value.split(',')[0]
		}
	}

</wxs>
<image mode="widthFix" src="{{imgUrl}}/image/ershoujiaoyi.png" style="width:100%"></image>
<view class="flex flex-direction padding-lr-lg">
	<dot-title title="二手车" color="title-color" isMore="{{false}}"  sign="{{infotypeid}}" type="3" dtype="2"></dot-title>
	<item-image-text bindtap="goInfo" data-id="{{item.secondHandCarId}}" type="8" wx:for="{{useDcarList}}" obj="{{item}}" imgUrl="{{function.split(item.vehicleImages)}}" itemTitle="{{item.vehicleColor}}{{item.brand}}"
		itemInfo="{{item.carConfiguration}};{{item.describeInPerfectCondition}}" isImg="true" isTab="false"  date="¥{{item.transferPrice}}" isDate="{{true}}"></item-image-text>
	<button bindtap="secondUsedCar" class="button-btn">我要发布</button>
	<dot-title title="二手房" color="title-color" isMore="{{false}}" sign="{{infotypeid1}}" type="3" dtype="2"></dot-title>
	<item-image-text bindtap="goHouseInfo" data-id="{{item.secondHandHouseId}}" type="8" wx:for="{{secondHouseList}}"  imgUrl="{{function.split(item.familyPictures)}}" itemTitle="{{item.orientation}}{{room}}{{hall}}{{coveredArea}}"
		itemInfo="{{item.buildingStructure}}" isImg="true" isTab="false" isDate="{{true}}" date="{{item.villageName}}" isLine="true">
	</item-image-text>
	<button bindtap="secondHouse" class="button-btn">我要发布</button>
</view>