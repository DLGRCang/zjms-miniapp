<!--pages/economic/pages/exhibitionInfo/exhibitionInfo.wxml-->
<cu-custom bgColor="bgColor" isBack="{{true}}">
	<view slot="content" class="text-black text-xl text-black text-bold">会展详情</view>
</cu-custom>
<image style="width: 100%; height: 380rpx;background-color: #dedede;"></image>
<view class="padding-lr-lg flex flex-direction">
	<text class="text-lg margin-top-sm">会展标题</text>
	<view class="margin-tb">
		<view class="cu-tag bg-cyan light">限流</view>
		<view class="cu-tag bg-cyan light">最晚6:00入院</view>
	</view>
	<view class="flex margin-tb-sm">
		<text class="icon text-black">会展地址</text>
		<text class="into" style="margin-left: auto;"></text>
	</view>

	<dot-title title="会展信息" color="title-color"></dot-title>
	<view class="flex flex-direction">
		<view class="padding-lr margin-top">
			<text class="grey-text">优惠政策</text>
			<text class="black-text">优待政策基本信息</text>
		</view>
		<view class="padding-lr flex margin-top-xl">
			<view class="grey-text">开放时间</view>
			<view class="black-text" style="max-width: 470rpx;">周一至周日：10:00-17:00,16:00停止进场</view>
		</view>
	</view>
</view>
