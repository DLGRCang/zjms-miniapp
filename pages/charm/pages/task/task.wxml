<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">{{tit}}</view>
</cu-custom>
<view class="padding-lg">

  <view class="flex flex-direction align-center">

    <view class="flex flex-direction margin-top margin-bottom-xl" style="width:100%">
      <text class="text-xl text-bold">姓名：</text>
      <input bindinput="putData" class="margin-top text-xl " placeholder="请输入真实姓名" data-key="name" value="" />
   
      <text class="text-xl text-bold margin-top-xl">手机号：</text>
      <input bindinput="putData" class="margin-top text-xl " placeholder="请输入手机号" data-key="phone" value="" />

      <text class="text-xl margin-top-xl text-bold">身份证号：</text>
      <input bindinput="putData" class="margin-top text-xl " placeholder="请输入身份证号" data-key="idCard" value="" />
 
    </view>

    <button bindtap="goLogin" class="bg-green text-lg" style="margin-top:100rpx;width:100%">进入任务</button>
  </view>

</view>