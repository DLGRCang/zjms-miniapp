<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">发布任务</view>
</cu-custom>
<view class="padding-lr-lg">
  <!-- <dot-title title="任务列表" color="color"></dot-title> -->
  <scroll-view scroll-x class="bg-white nav">
    <view class="flex text-center">
      <view class="cu-item flex-sub {{index==TabCur?'color cur':''}}" wx:for="{{status}}" wx:key bindtap="tabSelect"
        data-id="{{index}}">
       {{item}}
      </view>
    </view>
  </scroll-view>
<view class="box">
  <view class="flex justify-between margin-tb-lg" wx:if="{{TabCur==0}}" wx:for="{{tabState0}}">
    <view class="">
      <view class="text-xl text-bold">{{item.title}}</view>
      <view class="margin-tb-xs text-grey">{{item.cont}}</view>
    </view>
    <view class="fkbutton">
      <button class="cu-btn round bg-green shadow" bindtap="taskInfo" data-item="{{item}}">任务进度</button>
    </view>
  </view>
  <view class="flex justify-between margin-tb-lg" wx:if="{{TabCur==1}}" wx:for="{{tabState1}}">
    <view class="">
      <view class="text-xl text-bold">{{item.title}}</view>
      <view class="margin-tb-xs text-grey">{{item.cont}}</view>
    </view>
    <view class="fkbutton">
      <button class="cu-btn round bg-green shadow" bindtap="taskInfo" data-item="{{item}}">任务进度</button>
    </view>
  </view>
  <view class="flex justify-between margin-tb-lg" wx:if="{{TabCur==2}}" wx:for="{{tabState2}}">
    <view class="">
      <view class="text-xl text-bold">{{item.title}}</view>
      <view class="margin-tb-xs text-grey">{{item.cont}}</view>
    </view>
    <view class="fkbutton">
      <button class="cu-btn round bg-green shadow" bindtap="taskInfo" data-item="{{item}}">任务进度</button>
    </view>
  </view>
</view>
  

  <view class="flexButton bg-gray">
    <button class="bg-green lg" bindtap="publishTaskForm">发布任务</button>
    <button class="bg-green lg" bindtap="goVideo">视频会议</button>
  </view>

