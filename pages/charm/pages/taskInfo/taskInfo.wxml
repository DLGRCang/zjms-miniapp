<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">任务详情</view>
</cu-custom>
<view class="padding-lg">

  <view class="text-xl text-bold ">
    任务标题
  </view>

  <view class="margin-top-sm box">
    {{task.taskname}}
  </view>

  <view class="margin-top-sm text-xl text-bold">
    部门
  </view>

  <view class="margin-top-sm box">
    {{task.taskpersonname}}
  </view>

  <view class="margin-top-sm text-xl text-bold">
    任务时间
  </view>

  <view class="margin-top-sm box">
    {{task.tasktime}}
  </view>


  <view class="margin-top-sm text-xl text-bold">
    内容
  </view>

  <view class="margin-top-sm box">
    {{task.tasksummary}}
  </view>

  <block wx:if="{{task.taskaudio == '' || task.taskaudio==null}}"></block>
  <block wx:else>
    <view class="margin-top-sm text-xl text-bold">
      任务语音
    </view>

    <!-- <view class="margin-top-sm box" bindtap="showVoice">
      {{task.taskaudio}}
    </view> -->
    <view bindtap="showVoice" class="cuIcon-rankfill bg-green radius margin-right padding-left margin-top-sm"
      style="height:60rpx;flex:1;line-height:60rpx">{{voiceStatus}}</view>

  </block>


  <block wx:if="{{task.taskfile == '' || task.taskfile==null}}"></block>

  <block wx:else>
    <view class="margin-top-sm text-xl text-bold">
      任务图片：
    </view>

    <view class="margin-top-sm box" wx:for="{{taskImg}}" wx:key="item">
      <image src="{{imgUrl}}{{item}}" mode="aspectFill"></image>
    </view>
  </block>
  <view wx:if="{{isAdmin}}" bindtap="goTaskFk" data-id="{{task.taskInfoId}}" data-name="{{task.taskname}}">
    <button class="bg-green margin-tb-sm margin-top-xl">反馈</button>
  </view>
  <view style="display:flex" class="margin-top-lg"  wx:else>
    <button bindtap="deleteTask" class="bg-red margin-tb-sm margin-top-xl padding-lr-xl">删除</button>
    <button bindtap="updateTask" class="bg-green margin-tb-sm margin-top-xl padding-lr-xl">修改</button>
  </view>
</view>