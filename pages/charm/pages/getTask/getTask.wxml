<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">我的任务</view>
</cu-custom>
<view class="padding-lr-lg">
  <!-- <dot-title title="任务列表" color="color"></dot-title> -->

  <scroll-view scroll-x class="bg-white nav">
    <view class="flex text-center">
      <view class="cu-item flex-sub {{index==TabCur?'color cur':''}}" wx:for="{{status}}" wx:key bindtap="tabSelect"
        data-id="{{index}}">
       {{item}}
      </view>
    </view>
  </scroll-view>
<view class="box">
  <view class="margin-tb-lg"  wx:if="{{TabCur==0}}" wx:for="{{tabState0}}" bindtap="goInfo" data-item="{{item}}">
    <view class="text-xl text-bold">{{item.title}}</view>
    <view class="margin-tb-xs text-grey">{{item.cont}}</view>
    <view class="text-grey">{{item.data}}</view>
  </view>
  <view class="margin-tb-lg"  wx:if="{{TabCur==1}}" wx:for="{{tabState1}}" bindtap="goInfo" data-item="{{item}}">
    <view class="text-xl text-bold">{{item.title}}</view>
    <view class="margin-tb-xs text-grey">{{item.cont}}</view>
    <view class="text-grey">{{item.data}}</view>
  </view>
</view>
  

  

</view>