/* pages/component/nav/nav.wxss */
.head{
  position: relative;
}
.search {
  position: absolute;
  top: 380rpx;
  left: 5%;
  right: 5%;
}
.round {
  background: rgba(255, 255, 255, 0.8);
  color: #000;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
}
.round input{
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
}

.nav {
  width: 20%;
  /* white-space: initial; */
  display: flex;
  flex-direction: column;
}

.nav .nav-item {
  width: 100%;
  background-color: #F7F8F9;
  position: relative;
  font-size: 30rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.nav .nav-item.cur {
  background-color: #FFFFFF;
}


.VerticalMain {
  width: 80%;
  background-color: #FFFFFF;
}

.active {
  background-color: #FFFFFF;
  color: #054FAC;
  font-weight: 700;
}

.active .son {
  color: #E63E0E;
}

.text-blue {
  color: #0851AD;
}

.box {
  padding-right: 90rpx;
}

.icon-wrap {
  width: 100%;
  margin: 40rpx 0 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.icon-wrap .icon-item {
  width: 33.3333%;
  flex-shrink: 1;
  padding-bottom: 30rpx;
}

.icon-wrap .icon-item .item-img {
  display: flex;
  justify-content: center;
  margin-bottom: 8rpx;
}

.icon-wrap .icon-item .item-text {
  text-align: center;
}

.textInfo {
  display: inline-block;
  white-space: nowrap;
  width: 99%;
  overflow: hidden;
  text-overflow: ellipsis;
}