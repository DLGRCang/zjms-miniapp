<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content" class="text-white text-xl text-bold">上传</view>
</cu-custom>
<view class="padding-lg">
  <view class="flex justify-contents">
    <view class="list color"></view>
    <view class="text-center padding-left-xs text-lg">标题</view>
  </view>
  <view class="margin-top-lg">
    <input placeholder="请输入需解决的事情标题" bindinput="getTitle"></input>
  </view>
  <view class="line"></view>

  <view class="flex justify-contents">
    <view class="list color"></view>
    <view class="text-center padding-left-xs text-lg">内容</view>
  </view>
  <view class="margin-top-lg">
    <textarea maxlength="5" disabled="{{modalName!=null}}" bindinput="getContent" placeholder="请简单描述完成情况"></textarea>
  </view>
  <view class="line"></view>

  <view class="flex justify-contents">
    <view class="list color"></view>
    <view class="text-center padding-left-xs text-lg">类型</view>
  </view>
  <view class="margin-top-lg">
    <picker bindchange="getType" value="{{index}}" range="{{type}}">
      <view class="text-grey flex justify-between">
        <view> {{index?type[index]:'请选择'}}</view>
        <view><text class="cuIcon-right text-xxl"></text></view>
      </view>
    </picker>

  </view>
  <view class="line"></view>

  <view class="flex justify-contents">
    <view class="list color"></view>
    <view class="text-center padding-left-xs text-lg">时间</view>
  </view>
  <view class="margin-top-lg">
    <picker mode="date" value="{{date}}" start="{{nowDate}}" end="2100-01-01" bindchange="getDate">
      <view class="text-grey flex justify-between">
        <view>{{date}}</view>
        <view><text class="cuIcon-right text-xxl"></text></view>
      </view>
    </picker>
  </view>
  <view class="line"></view>

  <view class="flex justify-contents">
    <view class="list color"></view>
    <view class="text-center padding-left-xs text-lg">位置</view>
  </view>
  <view class="margin-top-lg">
    <input placeholder="请输入问题发生的位置" bindinput="getTitle"></input>
  </view>
  <view class="line"></view>


</view>