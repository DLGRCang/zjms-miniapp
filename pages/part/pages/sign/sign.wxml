<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content" class="text-white text-xl text-black text-bold">登录</view>
</cu-custom>
<view class="padding-lr-lg">
  <view class="padding-lr-lg">
    <image src="{{imgUrl}}/image/79.png" mode="widthFix" style='width:160rpx;height:160rpx;margin-top:100rpx;'></image>
    <view class="text-bold margin-top-lg" style='font-size:48rpx;'>
      我为群众办实事
    </view>
    <view class="text-grey" style='margin-top:15rpx;font-size:24rpx;'>
      在职党员进社区服务小程序
    </view>

    <view class="flex justify-between" style="margin-top:80rpx;">
      <view class="flex justify-contents">
        <view class="list color"></view>
        <view class="text-center padding-left-xs text-lg">党员登录</view>
      </view>
      <view class="color" bindtap="goRegister">前往注册<text class="cuIcon-right  text-bold"></text></view>
    </view>

    <view class="flex margin-top-lg" style="font-size:32rpx;">
      <view class="text-bold">党员电话</view>
      <input class="text-grey margin-left-lg" type="number" placeholder="请输入党员电话" bindinput="getPhone"></input>
    </view>
    <view class="line"></view>
    <view class="flex margin-top-lg" style="font-size:32rpx;">
      <view class="text-bold">登录密码</view>
      <input class="text-grey margin-left-lg" password placeholder="请输入密码" bindinput="getPassword"></input>
    </view>
    <view class="line"></view>
    <!-- <view class="flex margin-top-lg" style="font-size:32rpx;">
      <view class="text-bold">验证码</view>
      <input class="text-grey margin-left-lg"  placeholder="请输入注册设置密码" bindinput="getCode"></input>
      <image src="data:image/png;base64,{{codeImg}}" mode="widthFit" style="width:100rpx;height: 60rpx;" bindtap="getCodeImg"></image>
    </view>
    <view class="line"></view> -->
    <view class="padding flex flex-direction" style="margin-bottom:120rpx;">
      <button class="cu-btn margin-tb-sm lg" bindtap="submit" style="background-color: #B81C24;color: #ffffff;">立即登录</button>
    </view>
  </view>
</view>
<bottom style="margin-top:auto" deptStr1="建设单位：伊金霍洛旗大数据中心" deptStr2="建设单位：内蒙古大云智通科技有限公司"></bottom>