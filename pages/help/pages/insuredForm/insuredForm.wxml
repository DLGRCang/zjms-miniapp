<cu-custom bgColor="bgColor" isBack="{{true}}">
	<view slot="content" class="text-white text-xl text-black text-bold">身份核定</view>
</cu-custom>
<view class="padding">
  <view class="cu-form-group">
    <view class="title">姓名：</view>
    <input placeholder="请输入申请人姓名" bindinput="putData" data-key="userName"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">身份证号：</view>
    <input type="number" placeholder="请输入身份证号" bindinput="putData" data-key="userCard"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">联系方式：</view>
    <input type="number" placeholder="请输入联系方式" bindinput="putData" data-key="userPhone"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">现居住地址：</view>
    <input  placeholder="请输入现居住地址" bindinput="putData" data-key="userArea"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">户籍所在地：</view>
    <input  placeholder="请输入户籍所在地" bindinput="putData" data-key="userAddress"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">申请材料：</view>
    <view bindtap="addFile" class="padding-tb text-blue text-lg">{{fileState}}</view>
  </view>
  	<!-- 图片上传 -->
	<view class="cu-bar bg-white">
		<view class="action">
			图片上传
		</view>
		<view class="action">
			{{imgList.length}}/9
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-3 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<9}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>
  <view class="padding flex flex-direction">
		<button class="button-btn margin-tb-sm lg" bindtap="commitData">提交</button>
	</view>
</view>