	<!-- 残疾补助 -->
	<dot-title title="残疾补助" color="title-color"></dot-title>
	<view class="flex" wx:for="{{2}}">
		<image src="{{imgUrl}}/image/touxiang.png" class="round margin-lr-sm" style="width: 80rpx;height: 80rpx;"></image>
		<view class="flex flex-direction">
			<text class="text-black text-df" style="margin-bottom: 4rpx;">张宏昌</text>
			<text class="text-gray text-sm margin-bottom-xs">2019-02-03</text>
			<text class="text-black text-df margin-bottom-xl">已发放</text>
		</view>
	</view>
	<button class="button-btn">申请残疾补助</button>
</view>

