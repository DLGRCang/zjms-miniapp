<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content" class="text-white text-xl text-black text-bold">土地认养信息</view>
</cu-custom>
<image mode="widthFix" src="{{imgUrl}}/image/tudirenyang.png" style="width:100%;height:396rpx;"></image>
<view class="padding-lg">
  <view class="box">
    <view class="flex justify-between">
      <view>标题：</view>
      <view class="text-grey">{{detailInfo.title}}</view>
    </view>
    <view class="flex justify-between margin-top-sm">
      <view>来源：</view>
      <view class="text-grey">{{detailInfo.sources}}</view>
    </view>
    <view class="flex justify-between  margin-top-sm">
      <view>摘要：</view>
      <view class="text-grey">{{detailInfo.abstracts}}</view>
    </view>
    <view class="flex justify-between  margin-top-sm">
      <view>认养地点：</view>
      <view class="text-grey">{{detailInfo.adopt_address}}</view>
    </view>
    <view class="flex justify-between  margin-top-sm">
      <view>认养时间：</view>
      <view class="text-grey">{{detailInfo.adopt_date}}</view>
    </view>
    <view class="flex justify-between  margin-top-sm">
      <view>认养联系人：</view>
      <view class="text-grey">{{detailInfo.adopt_people}}</view>
    </view>
    <view class="flex justify-between  margin-top-sm">
      <view>认养联系人方式：</view>
      <view class="text-grey">{{detailInfo.adopt_phone}}</view>
    </view>
    <view class="flex justify-between  margin-top-sm">
      <view>发布日期：</view>
      <view class="text-grey">{{detailInfo.release_date}}</view>
    </view>
    <view class="flex justify-between  margin-top-sm">
      <view>发布机构：</view>
      <view class="text-grey">{{detailInfo.release_mechanism}}</view>
    </view>
    <view class="flex justify-between  margin-top-sm">
      <view>认养内容：</view>
      <view class="text-grey">{{detailInfo.content}}</view>
    </view>
  </view>
</view>