<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content" class="text-white text-xl text-black text-bold">转学办理</view>
</cu-custom>
<image mode="widthFix" src="{{imgUrl}}/image/zhuanxue.png" style="width:100%;height:396rpx;"></image>
<button class="button">转学申请</button>
<view class="margin-lr-lg padding-tb-lg">
  <dot-title title="申请规则" color="color" isMore="true" sign="{{infotypeid}}"></dot-title>

  <view class="cont">
    <view class="margin-bottom-lg" wx:for="{{dataList}}" wx:key="item">
      <view>{{item.info_content}}</view>
      <view class="margin-top-xs text-grey text-sm">{{item.publishdate}}</view>
    </view>
    <button class="bgColor">申请历史</button>
  </view>
</view>