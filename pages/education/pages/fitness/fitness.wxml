<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content" class="text-white text-xl text-black text-bold">文体健身</view>
</cu-custom>
<image mode="widthFix" src="{{imgUrl}}/image/wentijianshen.png" style="width:100%;height:396rpx;"></image>
<view class="margin-lr-lg padding-tb-lg">
  <dot-title title="体育场馆" color="color" isMore="true" sign="{{infotypeid}}" type="3"></dot-title>
  <item-image-text wx:for="{{dataList}}" obj="{{item}}" imgUrl="{{item.info_photos}}" itemTitle="{{item.info_content}}"
    itemInfo="{{item.info_summary}}" isImg="true" isTab="true" itemTabs="{{item.infotypePname}}" isLine="true">
  </item-image-text>
  <dot-title title="赛事" color="color" isMore="true"></dot-title>
  <view class="flex justify-between">
    <view wx:for="{{3}}" wx:key="item">
      <view>
        <image src="{{imgUrl}}/image/wentijianshen.png" style="height:276rpx;width:200rpx;"></image>
      </view>
      <view class="margin-tb-xs">没有此人 更高…</view>
      <view class="text-sm text-grey">借阅 203 次</view>
    </view>
  </view>
  <dot-title title="演出" color="color" isMore="true"></dot-title>
  <view class="flex justify-between">
    <view wx:for="{{3}}" wx:key="item">
      <view>
        <image src="{{imgUrl}}/image/wentijianshen.png" style="height:276rpx;width:200rpx;"></image>
      </view>
      <view class="margin-tb-xs">没有此人 更高…</view>
      <view class="text-sm text-grey">借阅 203 次</view>
    </view>
  </view>
</view>