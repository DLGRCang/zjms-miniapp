<!--pages/education/pages/schoolInfo/schoolInfo.wxml-->
<cu-custom bgColor="bgColor" isBack="{{true}}">
	<view slot="content" class="text-black text-xl text-black text-bold">详情</view>
</cu-custom>
<image style="width: 100%; height: 380rpx;background-color: #dedede;" mode="scaleToFill"  src="{{baseImgUrl}}{{data.photo}}"></image>
<view class="padding-lr-lg flex flex-direction padding-bottom-xl">
	<text class="text-lg margin-top-sm">{{data.schoolName}}</text>
	<view class="margin-tb">
		<view wx:for="{{data.schoolLabels}}" class="cu-tag bg-cyan light">{{item}}</view>
	</view>
	<view class="flex margin-tb-sm">
		<text class="icon text-black">{{data.schoolScope}}</text>
		<text class="into" style="margin-left: auto;"></text>
	</view>

	<dot-title title="入学流程" color="title-color"></dot-title>
	<view class="padding">
		<text class="text-red margin-right">1</text>
		<text>第一步：体检</text>
	</view>
	<view class="padding">
		<text class="text-red margin-right">2</text>
		<text>第二步：报名登记</text>
	</view>
	<view class="padding">
		<text class="text-red margin-right">3</text>
		<text>第三步：办理入校</text>
	</view>
	<dot-title title="师资力量" color="title-color"></dot-title>
	<view class="flex margin-tb" wx:for="{{data.facultyList}}">
		<image src="{{baseImgUrl}}{{item.photo}}" class="round margin-lr-sm" style="width: 80rpx;height: 80rpx;"></image>
		<view class="flex flex-direction">
			<text class="text-black text-df margin-bottom-sm" >{{item.teacherName}}</text>
			<text class="text-grey text-df ">{{item.experience}}</text>
		</view>
	</view>
	<dot-title title="教学设施" color="title-color"></dot-title>
	<view wx:for="{{data.supportFacility}}" class="padding">
		<text class="text-grey margin-right">{{item.facilityName}}</text>
		<text>{{item.facilityDescribe}}</text>
	</view>

</view>