<cu-custom bgColor="bgColor" isBack="{{true}}">
  <view slot="content" class="text-white text-xl text-black text-bold">中小学</view>
</cu-custom>
<image mode="widthFix" src="/image/zxx.png" style="width:100%;height:396rpx;"></image>
<view class="margin-lr-lg">

<block wx:for="{{type}}" wx:key="item">
  <view class="title">
    <dot-title title="{{item}}" color="color" isMore="true"></dot-title>
  </view>
  <view class="cont">
    <view wx:for="{{info}}" wx:key="item" bindtap="goDetail" data-id="{{item.id}}">
      <item-image-text imgUrl="" itemTitle="{{item.tit}}" itemInfo="{{item.cont}}" isImg="true" isTab="true"
        itemTabs="{{itemTabs}}" isLine="true">
      </item-image-text>
    </view>
  </view>
</block>


</view>